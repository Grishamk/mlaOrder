extend ../componentes/_plantillaEn.pug

block contenido

        //CONTENIDO PRINCIPAL
        main.main-container#head
            a(href="#head")#btnBackToTop
                span ↑
            //CARRUSEL PRINCIPAL
            
            .main-container__carrusel.animate__animated.animate__fadeIn
                
                .slider
                    //Primer Slide
                    .slide.active
                        .main-container__filtroAzul
                        img(src='/img/slide/slide1.webp' alt='')
                        .info.animate__animated.animate__fadeInLeftBig
                            h2.especial Firm of certified public accountants that has been operating since 1983.
                            p
                                | We conduct independent, objective, and timely review and assurance processes aligned with international standards and best practices.
                            
                            a.botonSecundario(href="/english/html/nosotros/quienesSomos.html") MORE INFO

                    //Segundo Slide
                    .slide
                        .main-container__filtroAzul
                        img(src='/img/slide/slide2.webp' alt='')
                        .info
                            h2.especial Audit and Assurance
                            p
                                |We provide a reliable assessment of the company's overall performance, its processes, and controls, thereby creating value for the development and improvement of your organization.
                            
                            a.botonSecundario(href="/english/html/servicios/auditoria.html") MORE INFO
                    
                    // Tercer Slide
                    .slide
                        .main-container__filtroAzul
                        img(src='/img/slide/slide3.webp' alt='')
                        .info
                            h2 Organizational Development
                            p
                                | We offer specialized services focused on Organizational Development, which ensure that your strategy and internal resources operate efficiently, harmoniously and organized, allowing your company to adapt to the current and future needs in a planned and controlled manner. 
                            
                            a.botonSecundario(href="/english/html/servicios/desarrolloOrg.html") MORE INFO
                    
                    // Cuarto Slide
                    .slide
                        .main-container__filtroAzul
                        img(src='/img/slide/slide4.webp' alt='')
                        .info
                            h2 Client Accounting Services (CAS)
                            p
                                | Based on our specialization in accounting and tax matters in the different economic sectors of the country, we provide accounting outsourcing and tax compliance services that guarantees: the quality, reliability and timeliness of the financial information of your organization.
                            
                            a.botonSecundario(href="/english/html/servicios/impuesto-nomina.html") MORE INFO
                    
                    // Quinto Slide
                    .slide
                        .main-container__filtroAzul
                        img(src='/img/slide/slide5.webp' alt='')
                        .info
                            h2 Tax Advisory
                            p
                                | We provide specialized advisory and tax planning services, as well as defense and the reach of agreements with the regulatory authority, tax compliance and audits on the matter. Our services are based on risk management focused on tax efficiency under due compliance.

                            a.botonSecundario(href="/html/servicios/asesoria.html") MORE INFO

                    //Navegación para los slides (Flechas)
                    .navigation
                        i.fas.fa-chevron-left.prev-btn
                            img(src="/icon/1904658_arrow_arrow left_change_direction_left_icon.svg", alt="")
                        i.fas.fa-chevron-right.next-btn
                            img(src="/icon/1904671_arrow_arrow right_change_direction_next_icon.svg", alt="")
                    
                    //Indicadores de los slides (puntos)
                    .navigation-visibility.animate__animated.animate__fadeInUpBig
                        .slide-icon.active
                        .slide-icon
                        .slide-icon
                        .slide-icon
                        .slide-icon
                
                .backButton#btnBaja
                    a(href="#services") 
            
            

            //SERVICIOS

            section.main__servicios#services
                //h2 Servicios
                div.servicios__contenedor.fade-in
                    
                    h2 Services
                        .linea

                    //IMPUESTOS
                    a.cardService(href="/html/servicios/impuesto-nomina.html")
                        img(src="/img/slide/slide4.webp", alt="").servicios__imagen
                        .servicios__texto
                            p Client Accounting Services (CAS)
                    
                    //AUDITORIA
                    a.cardService(href="/html/servicios/auditoria.html")
                        img(src="/img/slide/slide2.webp", alt="").servicios__imagen
                        .servicios__texto
                            p Audit and Assurance
                    
                    //DESARROLLO ORGANIZACIONAL
                    a.cardService(href="./html/servicios/desarrolloOrg.html")
                        img(src="/img/slide/slide3.webp", alt="").servicios__imagen
                        .servicios__texto
                            p Organizational Development
                    
                    //ASESORIA FISCAL
                    a.cardService(href="/html/servicios/asesoria.html")
                        img(src="/img/servicios/Asesoria.webp", alt="").servicios__imagen
                        .servicios__texto
                            p Tax Advisory

                    //CONSULTORIA DE NEGOCIOS
                    a.cardService(href="/html/servicios/consultorias-negocios.html")
                        img(src="/img/servicios/foto-consulto.webp", alt="").servicios__imagen
                        .servicios__texto
                            p Business and Financial Consulting
                    
                    //PROTECCION PATRIMONIAL
                    a.cardService(href="./html/servicios/proteccion.html")
                        img(src="/img/servicios/foto-protec.webp", alt="").servicios__imagen
                        .servicios__texto
                            p Asset Protection 
        


